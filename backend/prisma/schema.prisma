generator client {
  provider      = "prisma-client-js"
  // "native": Senin Windows bilgisayarında çalışması için
  // "debian-openssl-3.0.x": Yeni Docker imajı (Bookworm) için
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN    // Sen
  COMPANY_ADMIN  // Şirket Yetkilisi
  EDITOR         // İçerik Giren Personel
  MEMBER         // Sadece İzleyici
}

enum ShapeCategory {
  BASIC        // Temel şekiller (kare, daire, üçgen)
  GEOMETRIC    // Geometrik şekiller (beşgen, altıgen)
  ARCHITECTURAL // Mimari (L şekli, merdiven, kolon)
  ARROWS       // Oklar
  SYMBOLS      // Semboller (onay, uyarı, bilgi)
  CONTROLS     // Kontroller (play, pause)
  ICONS        // İkonlar (kullanıcı, kalp, ev)
  NATURE       // Doğa (yaprak, su, ateş)
  OBJECTS      // Nesneler (kutu, kilit, kamera)
  CUSTOM       // Özel şekiller
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String
  
  role         Role     @default(MEMBER) 

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  isDeleted    Boolean  @default(false)

  companyId    Int?     
  company      Company? @relation(fields: [companyId], references: [id])

  models       ARModel[]    
  activities   ActivityLog[]
  
  @@index([companyId])
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String
  domain    String
  createdAt DateTime @default(now())
  isDeleted Boolean  @default(false)

  isActive           Boolean   @default(true)
  subscriptionEndsAt DateTime?
  maxStorage         Int?      @default(1000) // MB cinsinden
  maxApiKeys         Int?      @default(1)

  users     User[]  
  arModels  ARModel[]    
  scenes    ARScene[] 
  categories    Category[]
  series        Series[]
  apiKeys    ApiKey[]
  activities ActivityLog[]  
}

model ApiKey {
  id          Int      @id @default(autoincrement())
  key         String   @unique @default(cuid())
  name        String   // "example.com API Key", "test-website.com"
  description String?
  
  companyId   Int
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  // ✅ CORS & Domain Kontrolü
  allowedOrigins  String[]  @default([]) // ["https://example.com", "https://test.com"]
  allowedDomains  String[]  @default([]) // Wildcard destekli: ["*.example.com"]
  
  // ✅ İzinler (Hangi işlemleri yapabilir?)
  permissions     Json      @default("{}") // { "readModels": true, "readScenes": true, "createScenes": false }
  
  // ✅ Rate Limiting
  rateLimit       Int?      // Saat başına istek limiti (örn: 1000)
  rateLimitWindow Int?      @default(3600) // Saniye cinsinden (3600 = 1 saat)
  
  isActive    Boolean   @default(true)
  expiresAt   DateTime? // Süre dolumu
  lastUsedAt  DateTime?
  usageCount  Int       @default(0)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([companyId])
  @@index([key])
}

model ARModel {
  id            Int      @id @default(autoincrement())
  fileName      String
  fileType      String
  filePath      String
  fileSize      Int?
  fileHash      String?
  companyId     Int
  uploadedBy    Int
  createdAt     DateTime @default(now())
  isDeleted     Boolean  @default(false)

  iv            String      
  authTag       String      
  thumbnailPath String?    
  
  usdzFilePath  String?    
  usdzIv        String?
  usdzAuthTag   String?
  usdzFileSize  Int?

  isPrivate     Boolean  @default(false)
  shareToken    String?  @unique

  categoryId    Int?
  category      Category? @relation(fields: [categoryId], references: [id])
  
  seriesId      Int?
  series        Series?   @relation(fields: [seriesId], references: [id])

  company       Company  @relation(fields: [companyId], references: [id])
  user          User     @relation(fields: [uploadedBy], references: [id])
  sceneItems    SceneItem[]

  @@index([shareToken])
}

model ARScene {
  id        Int      @id @default(autoincrement())
  name      String
  companyId Int
  
  settings  Json?    @default("{}") 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)

  isPrivate     Boolean  @default(false)
  memberCanEdit Boolean  @default(true)
  shareToken    String?  @unique

  company   Company  @relation(fields: [companyId], references: [id])
  items     SceneItem[]

  @@index([shareToken])
}

model SceneItem {
  id             Int      @id @default(autoincrement())
  sceneId        Int
  modelId        Int
  
  name           String?  
  position       Json     @default("{\"x\": 0, \"y\": 0, \"z\": 0}")
  rotation       Json     @default("{\"x\": 0, \"y\": 0, \"z\": 0}")
  scale          Json     @default("{\"x\": 1, \"y\": 1, \"z\": 1}")
  materialConfig Json?    @default("{}")

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  scene          ARScene  @relation(fields: [sceneId], references: [id], onDelete: Cascade)
  model          ARModel  @relation(fields: [modelId], references: [id])
  
  @@index([modelId])
}

model FloorTexture {
  id           Int      @id @default(autoincrement())
  name         String   
  thumbnailUrl String   
  textureUrl   String   
  isActive     Boolean  @default(true) 
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ActivityLog {
  id          Int      @id @default(autoincrement())
  action      String   
  description String   
  metadata    Json?    
  createdAt   DateTime @default(now())

  userId      Int?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  companyId   Int?
  company     Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([companyId])
  @@index([createdAt])
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  parentId    Int?      // Alt kategoriler için
  parent      Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  
  companyId   Int
  company     Company   @relation(fields: [companyId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  isDeleted   Boolean   @default(false)
  
  models      ARModel[]
  
  @@index([companyId])
  @@index([parentId])
}

model Series {
  id          Int      @id @default(autoincrement())
  name        String
  code        String?  // Seri kodu (örn: "S2024-01")
  description String?
  
  companyId   Int
  company     Company  @relation(fields: [companyId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isDeleted   Boolean  @default(false)
  
  models      ARModel[]
  
  @@index([companyId])
}

model Shape {
  id          Int      @id @default(autoincrement())
  code        String   @unique // 'rect', 'circle', vs.
  
  // Görsel Bilgiler
  icon        String   // '⬛', '⚪', vs.
  svgPath     String   @db.Text // SVG path data
  
  // Çoklu Dil Desteği
  labelTR     String   // 'Kare/Dikdörtgen'
  labelEN     String?  // 'Square/Rectangle'
  descTR      String?  // Opsiyonel açıklama
  descEN      String?
  
  // Kategorileme
  category    ShapeCategory @default(BASIC)
  tags        String[]      // ['mimari', 'geometrik']
  
  // Görünürlük & Sıralama
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  
  // İstatistikler
  usageCount  Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isDeleted   Boolean  @default(false)
  
  @@index([category])
  @@index([isActive, sortOrder])
}