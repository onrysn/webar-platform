generator client {
  provider      = "prisma-client-js"
  // "native": Senin Windows bilgisayarında çalışması için
  // "debian-openssl-3.0.x": Yeni Docker imajı (Bookworm) için
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN    // Sen
  COMPANY_ADMIN  // Şirket Yetkilisi
  EDITOR         // İçerik Giren Personel
  MEMBER         // Sadece İzleyici
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String
  
  role         Role     @default(MEMBER) 

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  isDeleted    Boolean  @default(false)

  companyId    Int?     
  company      Company? @relation(fields: [companyId], references: [id])

  models       ARModel[]    
  activities   ActivityLog[]
  
  @@index([companyId])
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String
  domain    String
  apiKey    String   @unique
  createdAt DateTime @default(now())
  isDeleted Boolean  @default(false)

  isActive           Boolean   @default(true)
  subscriptionEndsAt DateTime?

  users     User[]  
  arModels  ARModel[]    
  scenes    ARScene[] 
  activities ActivityLog[]  
}

model ARModel {
  id            Int      @id @default(autoincrement())
  fileName      String
  fileType      String
  filePath      String
  fileSize      Int?
  fileHash      String?
  companyId     Int
  uploadedBy    Int
  createdAt     DateTime @default(now())
  isDeleted     Boolean  @default(false)

  iv            String      
  authTag       String      
  thumbnailPath String?    
  
  usdzFilePath  String?    
  usdzIv        String?
  usdzAuthTag   String?
  usdzFileSize  Int?

  isPrivate     Boolean  @default(false)
  shareToken    String?  @unique

  company       Company  @relation(fields: [companyId], references: [id])
  user          User     @relation(fields: [uploadedBy], references: [id])
  sceneItems    SceneItem[]

  @@index([shareToken])
}

model ARScene {
  id        Int      @id @default(autoincrement())
  name      String
  companyId Int
  
  settings  Json?    @default("{}") 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)

  isPrivate     Boolean  @default(false)
  memberCanEdit Boolean  @default(true)
  shareToken    String?  @unique

  company   Company  @relation(fields: [companyId], references: [id])
  items     SceneItem[]

  @@index([shareToken])
}

model SceneItem {
  id             Int      @id @default(autoincrement())
  sceneId        Int
  modelId        Int
  
  name           String?  
  position       Json     @default("{\"x\": 0, \"y\": 0, \"z\": 0}")
  rotation       Json     @default("{\"x\": 0, \"y\": 0, \"z\": 0}")
  scale          Json     @default("{\"x\": 1, \"y\": 1, \"z\": 1}")
  materialConfig Json?    @default("{}")

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  scene          ARScene  @relation(fields: [sceneId], references: [id], onDelete: Cascade)
  model          ARModel  @relation(fields: [modelId], references: [id])
}

model FloorTexture {
  id           Int      @id @default(autoincrement())
  name         String   
  thumbnailUrl String   
  textureUrl   String   
  isActive     Boolean  @default(true) 
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ActivityLog {
  id          Int      @id @default(autoincrement())
  action      String   
  description String   
  metadata    Json?    
  createdAt   DateTime @default(now())

  userId      Int?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  companyId   Int?
  company     Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([companyId])
  @@index([createdAt])
}